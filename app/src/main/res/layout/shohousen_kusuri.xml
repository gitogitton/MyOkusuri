<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/row_kusuri"
    >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp"
            >
            <Button
                android:id="@+id/kusuri_tuika_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_kusuri_tuika"
                />
            <Button
                android:id="@+id/kusuri_sakujo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_kusuri_tuika"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_kusuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/item_name_kusurimei"
                android:textSize="20sp"
                android:paddingLeft="15sp"
                android:paddingRight="1sp"
                android:paddingStart="15sp"
                android:paddingEnd="1sp"
                />
            <EditText
                android:id="@+id/edit_kusuri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:hint="薬名を入力"
                android:text=""
                android:textSize="20sp"
                android:inputType="text"
                />
        </TableRow>
</TableLayout>